<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FloatingLabelLogin" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorHintTextLight</item>
        <item name="android:textColorHighlight">@color/colorPrimaryTextLight</item>
        <item name="android:textColorLink">@color/colorSecondaryTextLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

    <style name="EditTextLogin" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryTextLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="android:editTextColor">@color/colorPrimaryLight</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
